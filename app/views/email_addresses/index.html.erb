<h1>Listing email_addresses</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @email_addresses.each do |email_address| %>
  <tr>
    <td><%= email_address.address %></td>
    <td><%= email_address.person_id %></td>
    <td><%= link_to 'Show', email_address %></td>
    <td><%= link_to 'Edit', edit_email_address_path(email_address) %></td>
    <td><%= link_to 'Destroy', email_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

