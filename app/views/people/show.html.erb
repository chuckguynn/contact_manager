<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @person.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @person.last_name %>
</p>
<p>
  <ul>
    <% @person.email_addresses.each do |email| %>
      <li><%= email.address %>
        <%= link_to('edit', edit_email_address_path(email)) %>
        <%= link_to 'delete', email_address_path(email),
            :confirm => 'Are you sure?', :method => :delete %></li>
      <% end %>
  </ul>
</p>
<ul>
  <% @person.phone_numbers.each do |phone| %>
    <li><%= phone.number %>
        <%= link_to('edit', edit_phone_number_path(phone)) %>
        <%= link_to 'delete', phone_number_path(phone),
            :confirm => 'Are you sure?', :method => :delete %></li>
  <% end %>
</ul>

<%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
